<Window x:Class="Trade_Blotter.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Trade_Blotter"
        mc:Ignorable="d"
        Title="MainWindow" Height="350" Width="700">
    <Canvas Height="Auto" Width="Auto" HorizontalAlignment="Stretch" VerticalAlignment="Stretch">
        <Canvas.Background>
            <ImageBrush ImageSource="file:///C:/Users/Grad60/Downloads/trade.jpg" Stretch="UniformToFill"/>

        </Canvas.Background>


        <Label x:Name="label" Content="User Name"  FontSize="14" HorizontalAlignment="Left" Margin="61,120,0,0" VerticalAlignment="Top" FontFamily="Times New Roman" FontWeight="Bold"/>
        <TextBox x:Name="txtUserName" HorizontalAlignment="Left" Height="26" Margin="169,123,0,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Width="317"/>
        <Label x:Name="label1" Content="Password" FontSize="14" HorizontalAlignment="Left" Margin="61,151,0,0" VerticalAlignment="Top" FontWeight="Bold" FontFamily="Times New Roman"/>
        <TextBox x:Name="txtPassword" HorizontalAlignment="Left" Height="26" Margin="169,154,0,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Width="317"/>
        <Button x:Name="btnLogIn" Content="Log In" FontSize="20" HorizontalAlignment="Left" Margin="192,185,0,0" VerticalAlignment="Top" Width="228" Height="42" Click="ViewPrice" BorderBrush="#FF4EAC22" Background="#FF2DEA1A" FontWeight="Bold" FontFamily="Times New Roman"/>
        <Label x:Name="label2" Content="Log In" FontSize="30" HorizontalAlignment="Center" VerticalAlignment="Top" RenderTransformOrigin="-0.393,0.249" Width="124" Canvas.Left="296" Canvas.Top="10" FontWeight="Bold" FontFamily="Times New Roman"/>
        <Button x:Name="btnForgotPassword" Content="Forgot Password" HorizontalAlignment="Left" VerticalAlignment="Top" Width="228" Height="26" Click="ForgotPassword" Background="#FFF10D0D" FontFamily="Times New Roman" FontWeight="Bold" Canvas.Left="192" Canvas.Top="232"/>
        <Button x:Name="button1" Content="New User? Create an account"  Canvas.Left="262" Canvas.Top="78" Width="179" Height="20" Click="CreateAccount" Foreground="#FF3A20B0" BorderBrush="{x:Null}" Background="{x:Null}" FontWeight="Bold" FontFamily="Times New Roman" FontSize="13.333"/>
        <Rectangle Fill="#FF3434DC" Height="1" Canvas.Left="273" Stroke="#FF3434DC" Canvas.Top="96" Width="161" RenderTransformOrigin="0.5,0.5">
            <Rectangle.RenderTransform>
                <TransformGroup>
                    <ScaleTransform ScaleY="-1"/>
                    <SkewTransform/>
                    <RotateTransform/>
                    <TranslateTransform/>
                </TransformGroup>
            </Rectangle.RenderTransform>
        </Rectangle>

    </Canvas>
</Window>
